visually-hidden()
  width: 1px !important
  height: 1px !important
  margin: -1px !important
  padding: 0 !important
  position: absolute !important
  overflow: hidden !important
  clip: rect(0, 0, 0, 0) !important
  white-space: nowrap !important
  border: 0 !important

visually-responsive-hidden(key, value)
  .{prefix-visually-hidden}-{key}, .{prefix-visually-hidden}-{prefix-focusable}-{key}:not(:focus):not(:focus-within)
    visually-hidden()
